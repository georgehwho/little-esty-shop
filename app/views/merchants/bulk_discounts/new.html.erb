<h1>New Bulk Discount</h1>

<%= form_with model: @discount, url: merchant_bulk_discounts_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :percent_discount %>
  <%= f.number_field :percent_discount %>
  <%= f.label :quantity_threshold %>
  <%= f.number_field :quantity_threshold %>
  <%= f.submit %>
<% end %>